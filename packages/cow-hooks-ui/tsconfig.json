{
  "extends": "@bleu/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "@bleu/utils": ["../utils/src/*"]
    }
  },
  "content": ["./src/**/*.{js,ts,jsx,tsx}"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "types": ["node", "jest", "@testing-library/jest-dom"]
}
